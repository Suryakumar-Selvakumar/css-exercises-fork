    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/microsoft-edge-stable /usr/share/man/man1/microsoft-edge-stable.1.gz"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/google-chrome-stable /usr/share/man/man1/google-chrome-stable.1.gz"
        }

    ]
}